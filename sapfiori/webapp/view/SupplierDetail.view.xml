<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core" controllerName="tcs.sap.ui.hm.controller.SupplierDetail">
    <Page title="Supplier Details" showNavButton="true" navButtonPress="onBack">
        <!-- header -->
        <!-- content -->
        <ObjectHeader title="{name}" intro="{person}{contactNo}" number="{sinceWhen}" numberUnit="{city}" icon="sap-ico">
        </ObjectHeader>
        <Select id="idType" selectedKey="{/chartType}">
            <core:Item key="pie" text="pie"></core:Item>
            <core:Item key="column" text="column"></core:Item>
            <core:Item key="bar" text="bar"></core:Item>
            <core:Item key="line" text="line"></core:Item>
        </Select>
            <viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori'}" height='100%' width="100%" vizProperties="{title:{text:'Distributed Supply', visible:true}}" vizType='{/chartType}'>
                <viz:dataset>
                    <viz.data:FlattenedDataset data="{specialty}">
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition name="Name" value="{name}" />
                        </viz.data:dimensions>
                        <viz.data:measures>
                            <viz.data:MeasureDefinition name="Supply" value="{supply}" />
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>

                <viz:feeds>
                    <viz.feeds:FeedItem id='valueAxisFeed' uid="valueAxis" type="Measure" values="Supply" />
                    <viz.feeds:FeedItem id='categoryAxisFeed' uid="categoryAxis" type="Dimension" values="Name" />
                </viz:feeds>
            </viz:VizFrame>
        
    
    <!-- footer -->
    <footer>
        <Toolbar>
            <ToolbarSpacer ></ToolbarSpacer>
        </Toolbar>
    </footer>
</Page>
</mvc:View>
